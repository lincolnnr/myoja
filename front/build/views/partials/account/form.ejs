<div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" name="nome" placeholder="Nome Completo" value="<%= customer.nome %>">
</div>
<div class="form-group">
    <label for="email">E-mail</label>
    <input type="email" class="form-control" name="email" placeholder="E-mail" value="<%= customer.email %>">
</div>
<div class="form-group">
    <label for="password">Senha</label>
    <input type="password" class="form-control" name="password" placeholder="Senha" value="<%= customer.password %>">
</div>
<div class="form-group">
    <label for="cpf">CPF</label>
    <input type="text" class="form-control" name="cpf" placeholder="XXX.XXX.XXX-XX" value="<%= customer.cpf %>">
</div>
<div class="form-group">
    <label for="telefone">Telefone</label>
    <input type="tel" class="form-control" name="telefone" placeholder="(XX) XXXXX-XXXX" value="<%= customer.telefone %>">
</div>
<div class="form-group">
    <label for="whatsapp">WhatsApp</label>
    <input type="tel" class="form-control" name="whatsapp" placeholder="(XX) XXXXX-XXXX" value="<%= customer.whatsapp %>">
</div>
<div class="form-group">
    <label for="nascimento">Data de nascimento</label>
    <input type="text" class="form-control" name="nascimento" placeholder="XX/XX/XXXX" value="<%= customer.nascimento %>">
</div>
<div class="row">
    <div class="col-12">
        <h4>Endereço de entrega</h4>
        <hr>
    </div>
</div>
<div class="form-group">
    <label for="cep">CEP</label>
    <input type="text" class="form-control" name="cep" placeholder="XX.XXX-XXX" value="<%= customer.address.cep %>">
</div>
<div class="form-group">
    <label for="endereco">Endereço</label>
    <input type="text" class="form-control" name="endereco" placeholder="Endereço" value="<%= customer.address.endereco %>">
</div>
<div class="form-group">
    <label for="numero">Número</label>
    <input type="text" class="form-control" name="numero" placeholder="Número" value="<%= customer.address.numero %>">
</div>
<div class="form-group">
    <label for="bairro">Bairro</label>
    <input type="text" class="form-control" name="bairro" placeholder="Bairro" value="<%= customer.address.bairro %>">
</div>
<div class="form-group">
    <label for="cidade">Cidade</label>
    <input type="text" class="form-control" name="cidade" placeholder="Cidade" value="<%= customer.address.cidade %>">
</div>
<div class="form-group">
    <label for="estado">Estado</label>
    <input type="text" class="form-control" name="estado" placeholder="Estado" value="<%= customer.address.estado %>">
</div>
<div class="form-group">
    <button type="submit" class="btn btn-marina">NOVA CONTA</button>
</div>